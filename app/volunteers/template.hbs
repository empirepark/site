<div class="page-banner">
  <div class="container">
    <div class="mask"></div>
    <div class="title">
      <h2>We want you!</h2>
    </div>
  </div>
</div>

<div class="job-postings">

  <div class="container job-featured">
  </div>

  <div class="container job-list">
    <h2 class='title'>Postion Listings</h2>

    {{#each model as |posting|}}

    <div class="row">
      <div class="card col-md-12 col-sm-12 job-posting">
        <div class="card-block">
          <a class="pull-left collapsed" data-toggle="collapse" href="#post-{{posting.id}}" aria-expanded="false">
            <i class="fa fa-plus"></i>
          </a>
          <h1 class="card-title">{{posting.title}}</h1>
          <div class="card-text">
            {{markdown-to-html posting.description}}
          </div>
        </div>
        <div class="collapse" id="post-{{posting.id}}">
          <div class="card-block">
            <h2>Responsibilities:</h2>
            <div class="card-text">
              {{markdown-to-html posting.responsibilities}}
            </div>
          </div>
          <div class="card-block">
            <h2>Requirements:</h2>
            <div class="card-text">
              {{markdown-to-html posting.requirements}}
            </div>
          </div>
          <div class="card-block">
            <h2>How to Apply:</h2>
            <div class="card-text">
              {{markdown-to-html posting.apply}}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>
